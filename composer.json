{
    "name": "misarji/ez-mail",
    "description": "Integration of various email service providers in the Zend Framework Zend\\Mail",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "zf2",
        "email",
        "elastic email",
        "elasticemail",
        "mailgun",
        "mandrill",
        "postage",
        "postmark",
        "send grid",
        "sendgrid",
        "transactional email"
    ],
    "homepage": "https://github.com/misarji/EzMail",
    "authors": [
        {
            "name": "Keshav Mishra",
            "email": "keshav.kr.mishra@gmail.com",
            "homepage": "http://www.keshavmishra.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "zendframework/zend-mail": "~2.0",
        "zendframework/zend-http": "~2.0"
    },
    "require-dev": {
        "aws/aws-sdk-php-zf2": ">=1.0.1",
        "zendframework/zendframework": "~2.0"
    },
    "suggest": {
        "aws/aws-sdk-php-zf2": "If you need to use Amazon SES"
    },
    "autoload": {
        "psr-0": {
            "EzMail\\": "src/",
            "EzMailTest\\": "tests/"
        },
        "classmap": [
            "./"
        ]
    }
}
